{
  "manifest_version": 2,
  "name": "uMail",
  "version": "0.1",

  "description": "Automatic email summarization for Gmail.",

  "icons": {"16": "icon16.png",
            "48": "icon48.png",
            "128": "icon128.png"},

  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "uMail"
  },
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/"
  ]
}
